<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- מונע גיבוי נתונים רגישים -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="database" path="secure_data.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- מאפשר העברת נתונים בסיסיים בין מכשירים -->
        <include domain="file" path="app_data/"/>
    </device-transfer>
</data-extraction-rules>
